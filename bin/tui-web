#
#	System defaults
#
	source /etc/tuirc
	for f in $TUI_FILE_{CONF,USER}_{APPS,COMMANDS,SETTINGS,SYSTEM}
	do	[ -f "$f" ] && source "$f"
	done
	
#
#	Variable defaults
#
	script_version=0.8
	ME="${0##*/}"
#
#	Variable handling
#
	# Get the mode
	tui-bol-gui && \
		MODE=gui || \
		MODE=cli
	for A in "${@}";do
	case "$1" in
	"--version")	cat <<-EOF
				GNU $ME, Version $script_version
				Copyright (C) 2015 Simon Arjuna Erat
				License GPLv3+: GNU GPL version 3 or later <http://gnu.org/licenses/gpl.html>

				This is free software; you are free to change and redistribute it.
				There is NO WARRANTY, to the extent permitted by law.
			EOF
			exit 0
			;;
	"-h"|"--help"|"")
		## 'URL2' ..."
		printf '%s\n' \
			"$ME ($script_version)" \
			"Usage: $ME [options] 'URL'" \
			"-c	Force CLI mode" \
			"" \
			"	Opens provided URL in \$BROWSER_[CLI,GUI]" \
			""
		exit $RET_HELP
		;;
	"-c")	MODE=cli
		shift
		;;
	esac
	done
	#ARGS=($(echo "${@}"))
#
#	Functions
#
	GetAvailableApp() {
	# Returns the first found browser for either GUI or CLI
	#
		#[ -z "$1" ] && echo "GetAvailableEditor requires: gui or cli" && return 1
		LIST="$(<$TUI_DIR_LIST/web_${MODE})"
		for L in $LIST;do
			which $L 2>/dev/zero && \
				return 0
		done
		return 1
	}
#
#	Display
#
	if [ -z "$BROWSER" ]
	then	case "$MODE" in
		cli)	BROWSER=$(which "$BROWSER_CLI" 2>/dev/zero)
			wasFound=$?
			;;
		gui)	BROWSER=$(which "$BROWSER_GUI" 2>/dev/zero)
			wasFound=$?
			;;
		esac
		#export BROWSER
	fi
	# Failsafe check, use first available editor found if set EDITOR was not found
	if ! which $BROWSER 2>/dev/zero 1>/dev/zero
	then 	# The EDITOR is not available, search for default
		BROWSER=$(GetAvailableApp)
		[ $MODE = cli ] && \
			var=BROWSER_CLI || \
			var=BROWSER_GUI
		[ -z "$BROWSER" ] && \
			tui-echo "No filemanager for $MODE mode could be found, please change \"$CONF\" manualy!" && \
			exit 1
		# It was found, so save it
		tui-conf-set -v "$CONF" "$var" "$BROWSER"
	fi
	
	#for A in "${ARGS[@]}";do
	#	$BROWSER "$A"
		$BROWSER "$1"	# Dont get spammy
	#done
