# ------------------------------------------------------------------------
# File		typewriter
# Description:	Simply prints a string char by char, waiting a certin delay in between.
# ------------------------------------------------------
#
#	Variables
#
	BORDER_RIGHT=""
	source "$HOME/.tui_rc" && \
		. "$TUI_DIR_CONF/commands.conf" && \
		. "$TUI_DIR_THEMES/$TUI_THEME"  || . tui	# This first call would create the RC if its missing.
	# from: http://rosettacode.org/wiki/Reverse_a_string#UNIX_Shell
	for((i=${#BORDER_LEFT}-1;i>=0;i--)); do BORDER_RIGHT="$BORDER_RIGHT${BORDER_LEFT:$i:1}"; done
	WIDTH=$[ $(tput cols) - ( 2 * ${#BORDER_LEFT} ) - 2 ]
	EMPTY="$(printf '%*s' $WIDTH)"
	
	ME="${0##*/}"
	script_version=0.6.5
	DELAY=0.05
	TITLE=false
	MODE=cat
	
	help_text="$ME ($script_version)
Usage:	$ME [options] \"STRING\" ...

Example:	$ME \"/path/to/file1\" \"/path/to/file2\" ...
		$ME -td 0.005 \"\[/path/to/]file1\" \"string 1\" \"string 2\" \"\[/path/to/]file2\"
Options:
		-d(elay) NUM	Sets delay to NUM seconds, enables typewriter automaticly
		-t(ypewriter	Prints char by char with a default delay of $DELAY
		-T(itle)	Enables title printing per file output
"
#
#	Getting options
#
	while getopts hd:tT opt
	do	case $opt in
		h)	echo "$help_text"
			exit 1
			;;
		t)	MODE=typewriter
			;;
		d)	DELAY="$OPTARG"
			MODE=typewriter
			;;
		T)	TITLE=true
			;;
		esac
	done
	shift $(($OPTIND - 1))
	
	[ -z "$1" ] && \
		echo "$help_text" && \
		exit 1
	ARGS=("${@}")
#
#	Display & Action
#
	
	case $MODE in
	cat)	for arg in "${ARGS[@]}"
		do 	if [ -f "$arg" ]
			then 	$TITLE && tui-title "File: $arg"
				while IFS="" read -er content #|sed s,"	","    ",g
				do	# Leading dash
					[ "-" = "${content:0:1}" ] && \
						leadingDASHdummy="--" || \
						leadingDASHdummy=""
					# Tabs, become 4 spaces
					content="$(echo "$content"|sed s,'	','    ',g)"
					# Print content
					tui-printf -E $leadingDASHdummy "${content}"
				done<"$arg"
			else	RET=1
				tui-printf -S $RET "File not found: $arg"
			fi
		done
		;;
	typewriter)
		for arg in "${ARGS[@]}"
		do	# Pass every argument (each seperate STRING) by its own.
			[ -f "$arg" ] && \
				STRING="$(cat $arg)" && \
				($TITLE && tui-title "File: $arg" || exit 0) || \
				STRING="$arg"
			
			echo "$STRING" | while IFS="" read -er  line
			do	COUNT=0		# Chars of line
				PRINTED=0	# Chars printed, to compare with available borders
				LEN="${#line}"
			
			
				printf "$BORDER_LEFT "
				while [ $COUNT -lt $LEN ]
				#while [ $PRINTED -lt $WIDHT ]
				do 	char="${line:$COUNT:1}"
					double="${line:$COUNT:2}"
					#tripple="${line:$COUNT:3}"
					case "$double" in
#					"\t"|"	")	char="    "
#						;;
#					"\n"|"\r")	# |"\\"
#						char="${double/\\/\\\\}"
#						COUNT=$(( $COUNT + 2 ))
#						;;
					*)	case "$char" in
						"	"|'\t')
							char="    "	;;
						"%")	char="%%"	;;
						#'\')	char='\\'	;;
						#'	')
						#	char="    "	;;
						#'$')	char='\$'	;;
						#"{")	char="\{"	;;
						#"}")	char="\}"	;;
						esac
						COUNT=$(( $COUNT + 1 ))
						;; 
					esac
					
					# Add char to line and print if required
					#char="${char/\\/\\\\}"
					printf "$char"
					PRINTED=$(( $PRINTED + ${#char} ))
					if [ $PRINTED -eq $WIDTH ] #|| [ "$double" = "\r" ]
					then	printf "${EMPTY:$PRINTED}$BORDER_RIGHT\n$BORDER_LEFT "
						PRINTED=0
					fi
					sleep $DELAY
				done
				
				# Close the line
				printf "${EMPTY:$PRINTED}$BORDER_RIGHT\n"
			done
		done
		;;
	esac
	#printf "\n"
	exit $RET