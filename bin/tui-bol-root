	script_version=0.2
	TITLE="tui-bol-root"
#	Description:	Returns true if current user is root
#
#
#	Script Environment
#
	ME="${0##*/}"
#
#	Functions
#
	function help_screen() {
	# Simply shows the helpscreen
	# 
		cat <<-HELP_SCREEN
		$ME ($script_version)
		${TITLE^}
		Usage: 		$ME
		Examples:	$ME 
				tui-status \$? \"User is root\"
		
		Where options are:
			-h(elp) 		This screen
			-C(onf			Show the config menu
			-q(uiet)		Mutes all output
			-v(erbose)		Enables the scripts verbosity
		
		HELP_SCREEN
	}
	case "$1" in
	"-h"|"--help")	help_screen ; exit 99	;;
	esac
#
#	Action & Display
#
	if [ $UID -eq 0 ] || [ "$(whoami)" = "root" ]
	then	exit 0
	else 	exit 1
	fi