#
#	Variable defaults
#
	. tui
	script_version=0.6.2
	ME="${0##*/}"
	help_text="$ME ($script_version)
		\rUsage: $ME
		\rEach call it prints the next symbol of this order:
		\r - \\ | /
		\r
		\rExample: 
		\rwhile [ true ]
		\rdo\t$ME
		\rdone
		\r"
	[ "-h" = "$1" ] && printf "$help_text" && exit 
	indicator=( "-" "\\" "|" "/" )
#
#	Prepare
#
	#umask 022 "$TUI_FILE_TEMP"
	if [ -f "$TUI_FILE_TEMP" ]
	then	val=$(<"$TUI_FILE_TEMP")
	else	val=0
	fi
#
#	Display
#
	printf "${indicator[$val]}"
	val=$(( $var + 1 ))
	[ $val -gt 3 ] && val=0
	echo $val > "$TUI_FILE_TEMP"
