#
#	Variable defaults
#
	#TUI_FILE_TEMP=$(tui-conf-get $HOME/.tuirc TUI_FILE_TEMP) || . tuirc 1>/dev/zero 2>/dev/zero
	. $HOME/.tuirc  && \
		. $TUI_DIR_CONF/commands.conf || \
		. tuirc >/dev/zero
	script_version=0.7.1
	ME="${0##*/}"
	help_text="$ME ($script_version)
		\rUsage: $ME
		\rEach call it prints the next symbol of this order:
		\r - \\ | /
		\r
		\rExample: 
		\rwhile [ true ]
		\rdo\t$ME
		\rdone
		\r"
	[ "-h" = "$1" ] && printf "$help_text" && exit 
	indicator=( "-" "\\" "|" "/" )
#
#	Prepare
#
	# Check file
	if [ ! -f "$TUI_FILE_TEMP" ]
	then 	tui-bol-dir "$TUI_DIR_TEMP"
		touch "$TUI_FILE_TEMP"
		echo 0 > "$TUI_FILE_TEMP"
	fi
	# Check if numeric
	$GREP -q ^[0-3]$ "$TUI_FILE_TEMP" && \
		val=$(<"$TUI_FILE_TEMP") || \
		val=0
#
#	Display
#
	printf "${indicator[$val]}"
	[ $val -gt 3 ] && \
		val=0 || \
		val=$(( $val + 1 ))
	echo $val > "$TUI_FILE_TEMP"
