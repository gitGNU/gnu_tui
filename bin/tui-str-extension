	if source /etc/tuirc && source "${HOME:-/root}/.tuirc"
	then	source "$TUI_FILE_CONF_COMMANDS"
	else	source tuirc	# This first call would create the RC if its missing.
	fi
#
#	File:		tui-str-extension
#	Author: 	Simon Arjuna Erat (sea)
#	Contact:	erat.simon@gmail.com
#	License:	GNU General Public License (GPL)
#	Created:	2015.05.06
#	Changed:	2015.08.02
	script_version=0.5.1
	TITLE="tui-str-extension"
#	Description:	Simply returns the extension of passed file
#
#
#	Script Environment
#
	ME="${0##*/}"				# Basename of tui-str-extension
	ME="${ME/.sh/}"				# Cut off .sh extension
#
#	Functions
#
	function showHelp() {
	# Shows the basic help screen
	#
		cat <<-EOF
			$ME ($script_version)
			Usage: $ME "File with spaces.some string.txt"
			
			Simply returns the string after the last dot.
			Returns empty string if no dots were found.
			
		EOF
	}
#
#	Catching Arguments
#
	hadOpts=false
	case "$1" in
	"--help"|"")	showHelp
			exit 99
			;;
	"--version")	cat <<-EOF
				GNU $ME, Version $script_version
				Copyright (C) 2015 Simon Arjuna Erat
				License GPLv3+: GNU GPL version 3 or later <http://gnu.org/licenses/gpl.html>

				This is free software; you are free to change and redistribute it.
				There is NO WARRANTY, to the extent permitted by law.
			EOF
			exit 0
			;;
	esac
	while getopts "hv" opt
	do	case "$opt" in
		h)	showHelp
			exit
			;;
		v)	beVerbose=true
			hadOpts=true
			;;
		esac
	done
	$hadOpts && shift $(($OPTIND - 1))
#
#	Action & Display
#
	ext="${1##*.}"
	# Workaround for tarballs...
	echo "$1" | $GREP -q ".tar" && \
		TAR="tar." || TAR=""
	if [ "$ext" = "$1" ]
	then	echo ""
	else 	echo "$TAR$ext"
	fi