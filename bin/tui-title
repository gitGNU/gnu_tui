# ------------------------------------------------------------------------
#
#	Variable defaults
#
	for tmp_task in "/etc" "${HOME:-/root}/.local" "$HOME"
	do 	[ -f "$tmp_task/tui.conf" ] && source "$tmp_task/tui.conf" && [ ! -z "${SYSCONFDIR}!" ] && break
	done
	# Get the main config files
	# 
	if ! source "${SYSCONFDIR}/tuirc" && source "${HOME:-/root}/.tuirc" 2>/dev/zero
	then 	source tuirc
	fi
	
#	source /etc/tuirc && \
		break_on_injections "$@" && \
		exit 1
	script_version=0.9.0a
	ME="${0##*/}"
#
#	Variable handling
#
	case "$1" in
	"--version")
		cat <<-EOF
			GNU $ME, Version $script_version
			Copyright (C) 2015 Simon Arjuna Erat
			License GPLv3+: GNU GPL version 3 or later <http://gnu.org/licenses/gpl.html>

			This is free software; you are free to change and redistribute it.
			There is NO WARRANTY, to the extent permitted by law.
		EOF
		exit 0
		;;
	"-h"|"--help")
		printf '%s\n' \
			"$ME ($script_version)" \
			"Usage: $ME [[-] | [str1] [str2] [str3]]" \
			"Pass '-' to read input from pipe" \
			"One can pass empty strings to align the desired output." \
			"	Prints one string in the center" \
			"	Prints two strings left and right" \
			"	Prints three strings left, centered and right" \
			""
		exit 99
		;;
	*)	[ "-" = "${1:0:1}" ] && \
		leadingDASHdummy="--" || \
		leadingDASHdummy=""
		;;
	esac
#
#	Display
#
	if [ "-" = "$1" ] || [ "--" = "$1" ]
	then	# Do pipe handling
		while read LEFT CENTER RIGHT
		do	set "$LEFT" "$CENTER" "$RIGHT"
			case $# in
			0)	tui-printf -T 					;;
			1)	tui-printf -T $leadingDASHdummy "$1"		;;
			2)	tui-printf -T $leadingDASHdummy "$1" "$2" 	;;
			3)	tui-printf -T $leadingDASHdummy "$1" "$2" "$3"	;;
			esac
		done
	else	case $# in
		0)	tui-printf -T 					;;
		1)	tui-printf -T $leadingDASHdummy "$1"		;;
		2)	tui-printf -T $leadingDASHdummy "$1" "$2" 	;;
		3)	tui-printf -T $leadingDASHdummy "$1" "$2" "$3"	;;
		esac
        fi