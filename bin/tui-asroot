	source /etc/tuirc
	TEXTDOMAIN="${0##*/}"	# Will be changed over time, but easier to copy paste
	TEXTDOMAINDIR="${TUI_DIR_SYSTEM/tui/locale}"	# Will be changed over time, but easier to copy paste
	#TEXTDOMAINDIR="${TUI_DIR_SYSTEM}/po/"
	export TEXTDOMAIN TEXTDOMAINDIR
	source gettext.sh
	for f in $TUI_FILE_CONF_{COMMANDS,SETTINGS,SYSTEM}
	do	[ -f "$f" ] && source "$f"
	done
	
#
#	File:		tui-asroot
#	Author: 	Simon Arjuna Erat (sea)
#	Contact:	erat.simon@gmail.com
#	License:	GNU General Public License (GPL)
#	Created:	2015.04.05
#	Changed:	2015.08.03
	script_version=0.9.0c
#	Description:	Executes passed command as root
#
#
#	Script Environment
#
	ME="${0##*/}"				# Basename of tui-asroot
#
#	Translate strings
#
	MSG_TR_ROOT="$(gettext 'Please provide root password.')" #,"'Please provide root password.'")"
	MSG_TR_SUDO="$(eval_gettext 'Password for $USER')"
#
#	Help text
#
	MSG_TR_HELP="$(eval_gettext '
Usage: 		$ME \"command\"
Examples:	$ME \"cat /etc/cryptab\"
		$ME -m \"Provide password to show crypttab\" \"cat /etc/cryptab\"
Where options are:
	-h(elp) 		This screen
	-m(essage)	MSG	Prints \"MSG\" before asking for a password

')"
	MSG_TR_VERSION="$(gettext '
GNU $ME, Version $script_version
Copyright (C) 2015 Simon Arjuna Erat
License GPLv3+: GNU GPL version 3 or later <http://gnu.org/licenses/gpl.html>

This is free software; you are free to change and redistribute it.
There is NO WARRANTY, to the extent permitted by law.

')"
#
#	Catching Arguments
#
	# Get access to the passed value of the argument by using $OPTARG
	[ "--help" = "$1" ] && printf "$MSG_TR_HELP" && exit 99
	[ "--version" = "${1,,}" ] && printf "$MSG_TR_VERSION" && exit 0
	while getopts hm: opt
	do 	case $opt in
		h)	printf "$MSG_TR_HELP"
			exit $RET_HELP
			;;
		m)	MSG="$OPTARG"
			shift 2
		esac
	done
#
#	Display & Action
#
	if tui-bol-root
	then	# When passing eg: bash /path/to/script, quotes causes a failure!
		#eval "${@}"
		${@}
		exit "$?"
	elif "${useSudo:-false}" && which "$SUDO" 2>/dev/zero 1>/dev/zero
	then	tui-echo "${MSG:-$MSG_TR_SUDO}" >&2
		"${SUDO:-sudo}" ${@} 	>&2
		exit "$?"
	else	tui-echo "${MSG:-$MSG_TR_ROOT}"
		su -c "${@}" 		>&2
		exit "$?"
	fi
	exit 1