	source "$HOME/.tuirc" || . tuirc
	for f in $TUI_FILE_{CONF,USER}_{COMMANDS,SETTINGS}
	do	[ -f "$f" ] && source "$f"
	done
	
#
#	File:		tui-asroot
#	Author: 	Simon Arjuna Erat (sea)
#	Contact:	erat.simon@gmail.com
#	License:	GNU General Public License (GPL)
#	Created:	2015.04.05
#	Changed:	2015.06.27
	script_version=0.9.0
	TITLE="Run as root"
#	Description:	Executes passed command as root
#
#
#	Script Environment
#
	ME="${0##*/}"				# Basename of tui-asroot
	# $SUDO is defined in $TUI_FILE_CONF_COMMANDS
	TMP="$TUI_FILE_TEMP.$$.asroot"
#
#	Variable defaults (options)
#
	beVerbose=false
#
#	Help text
#
	help_text="
Usage: 		$ME 'command'
Examples:	$ME 'cat /etc/cryptab'
		$ME -m 'Provide password to show crypttab' 'cat /etc/cryptab'
Where options are:
	-h(elp) 		This screen
	-m(essage)	MSG	Prints 'MSG' before asking for a password
"
	showVersion() { 
	cat <<-EOF
		GNU $ME, Version $script_version
		Copyright (C) 2015 Simon Arjuna Erat
		License GPLv3+: GNU GPL version 3 or later <http://gnu.org/licenses/gpl.html>

		This is free software; you are free to change and redistribute it.
		There is NO WARRANTY, to the extent permitted by law.
	EOF
	}
	
#
#	Catching Arguments
#
	# Get access to the passed value of the argument by using $OPTARG
	[ "--help" = "$1" ] && printf "$help_text" && exit 99
	[ "--version" = "${1,,}" ] && showVersion && exit 0
	while getopts hm: opt
	do 	case $opt in
		h)	printf "$help_text"
			exit $RET_HELP
			;;
		m)	MSG="$OPTARG"
			shift 2
		esac
	done
#
#	Display & Action
#
	if tui-bol-root
	then	${1}
		exit $?
	elif ${useSudo:-false} && which sudo 2>/dev/zero 1>/dev/zero
	then	tui-echo "${MSG:-Password for $USER}"
		${SUDO:-sudo} "${1}" 	>/dev/stderr	#; echo \$?  > /dev/stdout > $TMP"
		exit $?
	else	tui-echo "${MSG:-Please provide root password.}"
		su -c "${1}" 		>/dev/stderr	# ; echo \$? > /dev/stdout > $TMP"
		exit $?
	fi
	exit 1