#
#	Variable defaults
#
	script_version=0.7.3
	ME="${0##*/}"
#
#	Variable handling
#
	case "$1" in
	"-h"|"--help")
		printf '%s\n' \
			"$ME ($script_version)" \
			"Usage: $ME [str1] [str2] [str3]" \
			"	Prints str1 on the left" \
			"	Prints str2 in the middle" \
			"	Prints str3 on the right" \
			"If 2 strings are passed, they're printed left and right." \
			"One can pass emptry strings to align the desired output." \
			""
		exit 99
		;;
	*)	[ "-" = "${1:0:1}" ] && \
			leadingDASHdummy="--" || \
			leadingDASHdummy=""
		;;
	esac
#
#	Display
#
	case $# in
	0)	tui-printf -E 					;;
	1)	tui-printf -E $leadingDASHdummy "$1"		;;
	2)	tui-printf -E $leadingDASHdummy "$1" "$2" 	;;
	3)	tui-printf -E $leadingDASHdummy "$1" "$2" "$3"	;;
	esac
        