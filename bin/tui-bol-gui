	source "$HOME/.tuirc" && \
		. "$TUI_FILE_CONF_COMMANDS" || \
		. tuirc
#
#	File:		tui-bol-gui
#	Author: 	Simon Arjuna Erat (sea)
#	Contact:	erat.simon@gmail.com
#	License:	GNU General Public License (GPL)
#	Created:	2015.05.07
#	Changed:	2015.06.27
	script_version=0.5
#	Description:	Returns true if user is in GUI mode.
#
#
#	Script Environment
#
	ME="${0##*/}"				# Basename of tui-bol-gui
#
#	Variable defaults (options)
#
	beVerbose=false
#
#	Functions
#
	function help_screen() {
	# Simply shows the helpscreen
	# 
		cat <<-HELP_SCREEN
		$ME ($script_version)
		Usage: 		$ME [options]
		Returns true if user is in a graphical environment
		
		Examples:	$ME -v
		
		 		if $ME
		 		then	echo 'in gui'
		 		else	echo 'on tty'
		 		fi
		
		Where options are:
			-h(elp) 		This screen
			-v(erbose)		Prints the name of the Desktop Environment (DE) or Window Manager (WM)
		
		HELP_SCREEN
	}
#
#	Catching Arguments
#
	[ "--help" = "$1" ] && help_screen && exit 99
	showVersion() { 
	cat <<-EOF
		GNU TUI - $ME, Version $script_version
		Copyright (C) 2013 Free Software Foundation, Inc.
		License GPLv3+: GNU GPL version 3 or later <http://gnu.org/licenses/gpl.html>

		This is free software; you are free to change and redistribute it.
		There is NO WARRANTY, to the extent permitted by law.
	EOF
	}
	[ "--version" = "${1,,}" ] && showVersion && exit 0
	while getopts "hv" opt
	do 	case $opt in
		h)	help_screen
			exit $RET_HELP
			;;
		v)	beVerbose=true
			hadOpts=true
			shift
			;;
		*)	printf "$help_text" ; exit $?	;;
		esac
	done
#
#	Display & Action
#
	DE="${XDG_CURRENT_DESKTOP:-$DESKTOP_SESSION}"
	if [ ! -z "$DE" ] || echo "$TERM" | $GREP -q -i term 	# This should cover xterm and other term/in/ator's
	then	$beVerbose && echo "$DE"
		exit 0
	else	exit 1
	fi