	source "$HOME/.tuirc" || . tuirc
	source "$TUI_FILE_CONF_COMMANDS"
#
#	File:		tui-math-add
#	Author: 	sea
#	Contact:	sea@localhost.localdomain
#	License:	GNU General Public License (GPL)
#	Created:	2015.06.04
#	Changed:	2015.06.04
	script_version=0.2
	TITLE="TUI awk based mathematic"
#	Description:	Text TODO
#
#
#	Script Environment
#
	ME="${0##*/}"				# Basename of tui-math-add
	ME="${ME/.sh/}"				# Cut off .sh extension
	beVerbose=false				# Just print endresult by default
	posVerbose="\033[16G"			# The position of where to place the 2nd column
#
#	Help text
#
	help_text="
$ME ($script_version)
${TITLE^}
Usage: 		$ME [-h] NUM1 NUM2 [ NUM3 ... ]
Examples:	$ME 2.5 1.75 3.33
		14.5687

Where options are:
	-h(elp) 		This screen
	-v(erbose)		Show each calculation step done

"
#
#	Catching Arguments
#
	while getopts "hv" opt
	do 	case $opt in
		h)	printf "$help_text"
			exit $RET_HELP
			;;
		v)	beVerbose=true
			;;
		esac
	done
	shift $(($OPTIND - 1))
	[ -z "$2" ] && echo "Usage: $ME NUM1 NUM2 ..." && exit 1
	[ -z "$(echo $@|tr -d [:space:])" ] && echo "Usage: $ME 15 3.124 ..." && exit 1
#
#	Action & Display
#
	NUM=$1
	${beVerbose:-false} && echo "  $NUM" >&2
	shift
	for num in $@
	do	NUM=$(echo $NUM $num|$AWK '{print ($1 * $2)}')
		$beVerbose && printf "* $num ${posVerbose}\t= $NUM\n" >&2
	done
	$beVerbose && echo "--------------------------" >&2
	echo $NUM
