#
#	Variable defaults
#
	script_version=0.8
	ME="$(basename $0)"
	help_text="$ME ($script_version)
		\rUsage: $ME \"Question:\"
		\rReturns on user press of: o,j,s,y
		\r"
	ARGS_COUNT=$#
#
#	Check for the environment to load
#
	source "$HOME/.tui_rc" && \
		. "$TUI_DIR_CONF/commands.conf" && \
		. "${TUI_DIR_THEMES:-/usr/share/tui/themes}/$TUI_THEME"  || . tui	# This first call would create the RC if its missing.
	
	help_text="
$ME ($script_version)
Usage: 	$ME \"Question\"

Example:
	if $ME 'Do you want to do this?'
	then echo yes
	else echo no
	fi

"
#
#	Variable handling
#
	[ -z "$1" ] && \
		printf "$help_text" && \
		exit $RET_HELP
	case "$1" in
	"-h")	printf "$help_text" ; exit $RET_HELP
		;;
	esac
#
#	Display
#
	tui-printf "$1" > /dev/stderr
	printf "\r$BORDER_LEFT $1 (y/n) " > /dev/stderr
	read -n1 answer 
	#printf "\r"  > /dev/stderr
	tui-echo "$1 (y/n)" "$answer"  > /dev/stderr
	case "$answer" in
	    y|o|j|s|Y|O|J|S)
	    		# First letter of the meaning "yes" in these languages:
			# English, Fran√ßais, Deutsch, Italiano
			exit 0    ;;
	    *)          exit 1    ;;
	esac
