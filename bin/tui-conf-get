	source "$HOME/.tui_rc" && \
		. "$TUI_DIR_CONF/commands.conf" || \
		. tui	# This first call would create the RC if its missing.
	
#
#	Author: 	Simon Arjuna Erat (sea)
#	Contact:	erat.simon@gmail.com
#	License:	GNU General Public License (GPL)
#	Created:	2014.04.24
#	Changed:	2015.05.14
	script_version=0.4
#	Description:	Get a value from an 'conf/ini' file
#
#	Variables
#
	RET_HELP=99
	TITLE="Get values from conf files"
	ME="${0##*/}"
	ME_DIR="${0/${0##/*/}}"
	help_text="
$ME ($script_version - BETA)
$TITLE
Usage: 		$ME [options] FILE [VALUENAME]
Example:	$ME -l /etc/default/grub
		$ME /etc/default/grub GRUB_CMDLINE_LINUX
		$ME -i /etc/default/grub grub_cmdline_linux
		
Where options are:
	-h		This screen
	-i		Is no longer case sensitive
	-l		Lists values vailabel in the file

"
	OPT=""
	VALUE=""
	CONFFILE=""
	VARNAME=""
#
#	Catching Arguments
#
	[ -z "$2" ] && printf "$help_text" && exit $RET_HELP
	while getopts "ilh" name
	do 	case $name in
		i)	OPT="-i"
			;;
		l)	$GREP -v ^"#" "$2"|$GREP "="|$SED s,"="," ",g|$AWK '{print $1}'
			exit 0
			;;
		h)	printf "$help_text"
			exit $RET_HELP
			;;
		esac
	done
	shift $(($OPTIND - 1))
	CONFFILE="$1"
	VARNAME="$2"
	[ ! -f "$CONFFILE" ]  && tui-echo "$CONFFILE dont exist?" "$TUI_FAIL" && exit 1
#
#	Display & Action
#
	$AWK	'
		/^#/  ||
		/^\[/  ||
		/!VAR/ { next }
		{
			if (VAR = $1) {
				if ("-z" != $2) {
					print $2
				}
			}
	}' VAR="${VARNAME}=" FS="=" "$CONFFILE" # | head -n 1
	exit
	# Old way
	
	VALUE=$($GREP $OPT "${VARNAME}=" "$CONFFILE"|$GREP -v ^#|$SED s,'"','',g|$SED s,'=',' ',g) > /dev/zero
	VALUE="${VALUE:${#VARNAME}+1}"
	#VALUE="${VALUE/${VARNAME}/}"
	#printf "$(echo $VALUE)"
	#printf "$VALUE"
	printf "${VALUE}" | $SED s,^[a-zA-Z0-9]\ ,,g
