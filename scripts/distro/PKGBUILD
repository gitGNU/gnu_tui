_hkgname=tui
pkgname=tui
pkgver=$(tmp=$(\gawk -F= '/TUI_VERSION/ {print $2}' ../../bin/tuirc);echo ${tmp/*=};tmp='')
pkgrel=1
pkgdesc="GNU TUI, Text User Interface, framework for scripts"
url="https://github.com/sri-arjuna/tui"
license=('GPL-3')
arch=('any')
#depends=('bash', 'gawk', 'gettext', 'grep', 'sed')
provides=('tui')
makedepends=()
conflicts=()
replaces=()
backup=()
source=(https://github.com/sri-arjuna/tui/archive/v${pkgver}.tar.gz)
##md5sums=('3ff075d8e620197ea9cd12df72d95184')

build() {
    cd ${srcdir}/${_hkgname}-${pkgver}
    ./configure --prefix=/usr --chroot=$srcdir
}

package() {
    cd ${srcdir}/${_hkgname}-${pkgver}
    ./make-install
}